{
  "name": "kk-rhooks",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "lint": "eslint \"{packages,apps}/**/*.{ts,tsx,js,jsx}\"",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
    "commit": "git-cz",
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "pnpm --filter=./packages/* test",
    "test:cov": "cross-env REACT_MODE=strict pnpm --filter=./packages/* test:cov"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {},
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --cache --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --cache --write --parser=typescript"
    ]
  },
  "devDependencies": {
    "eslint": "9.35.0",
    "@eslint/js": "9.35.0",
    "typescript": "5.9.3",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "typescript-eslint": "8.46.2",
    "globals": "16.4.0",
    "prettier": "3.6.2",
    "eslint-plugin-prettier": "5.5.4",
    "lint-staged": "16.2.6",
    "cspell": "9.2.2",
    "commitlint": "20.1.0",
    "commitizen": "4.3.1",
    "cz-git": "1.12.0",
    "husky": "9.1.7",
    "turbo": "2.5.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "vitest": "3.2.4",
    "@vitest/coverage-istanbul": "3.2.4",
    "jsdom": "27.1.0",
    "@testing-library/react": "16.3.0",
    "cross-env": "10.0.0"
  }
}